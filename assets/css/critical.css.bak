/* --- LÃ¼scher-Inspired Color Palette --- */
:root {
  /* Light Theme Colors */
  --color-primary-bg: #E6F3F8;      /* Very light blue-grey for a subtle background */
  --color-primary-text: #2C3E50;    /* Dark Blue - main text and headings */
  --color-accent-growth: #27AE60;   /* Green - for growth-related actions */
  --color-accent-hope: #F1C40F;     /* Yellow - for optimistic highlights */
  --color-accent-action: #E67E22;   /* Red-Orange - for active calls to action */
  --color-accent-transform: #8E44AD; /* Violet - for deeper, spiritual messages */
}

/* --- Dark Theme Media Query --- */
@media (prefers-color-scheme: dark) {
  :root {
    --color-primary-bg: #1B263B;      /* Dark Blue-Grey background */
    --color-primary-text: #BDC3C7;    /* Light text color */
    --color-accent-growth: #4CD166;   /* Lighter Green */
    --color-accent-hope: #F8E48D;     /* Lighter Yellow */
    --color-accent-action: #FC853D;   /* Lighter Red-Orange */
    --color-accent-transform: #BD77E0; /* Lighter Violet */
  }
}

/* --- Replaced Color Declarations in Original CSS --- */
/* Your original CSS has been modified below to use the new color variables. */

/* Base body and typography colors */
body {
    margin: 0;
    font-family: var(--bs-body-font-family);
    font-size: var(--bs-body-font-size);
    font-weight: var(--bs-body-font-weight);
    line-height: var(--bs-body-line-height);
    color: var(--color-primary-text); /* Modified */
    text-align: var(--bs-body-text-align);
    background-color: var(--color-primary-bg); /* Modified */
    -webkit-text-size-adjust: 100%;
}

h1, h2, h3, h4, h5, h6 {
    margin-top: 0;
    margin-bottom: .5rem;
    font-weight: 700; /* Modified for a bolder look */
    line-height: normal; /* Modified */
    color: var(--color-primary-text); /* Modified */
}

p {
    font-size: 16px;
    font-weight: 300;
    line-height: 28px;
    color: var(--color-primary-text); /* Modified */
}

strong {
    font-weight: 600;
}

/* Link and button colors */
:root {
    --bs-link-color: var(--color-accent-growth); /* Modified */
    --bs-link-color-rgb: 39, 174, 96; /* Approximation for the color var */
    --bs-link-hover-color: var(--color-accent-hope); /* Modified */
    --bs-link-hover-color-rgb: 241, 196, 15; /* Approximation for the color var */
    --bs-link-decoration: none;
}

a {
    color: var(--color-accent-growth); /* Modified */
    text-decoration: none;
}

a:hover {
    color: var(--color-accent-hope); /* Added for consistency */
}

.btn-link {
    --bs-btn-color: var(--color-accent-growth); /* Modified */
    --bs-btn-hover-color: var(--color-accent-hope); /* Modified */
}

.dropdown-item.active {
    color: var(--color-primary-bg); /* Modified */
    background-color: var(--color-accent-growth); /* Modified */
}

.dropdown-item.active:hover {
  background-color: var(--color-accent-hope);
  color: var(--color-primary-text);
}


/* Header and branding colors */
.header .navbar-brand span:first-child {
    color: var(--color-primary-text); /* Modified */
}

.header .navbar-brand span:nth-child(2) {
    color: var(--color-primary-text); /* Modified */
}

.header .navbar .nav-item .nav-link {
    color: var(--color-primary-text); /* Modified */
}

.lead a {
    color: var(--color-accent-action); /* Modified */
}

.platform-links [class^=icon-] {
    color: var(--color-primary-text); /* Modified */
}

/* Footer colors */
.footer p {
    color: var(--color-primary-bg); /* Modified for contrast in dark theme */
}

.footer__right {
    color: var(--color-primary-bg); /* Modified for contrast */
}

/* Highlighted text */
.display-1 {
    color: var(--color-primary-text); /* Modified */
}

/* Specific component colors */
.rad-subscription-group #rad-subscription-fail p,
.rad-subscription-group #rad-subscription-success p {
    color: var(--color-primary-bg); /* Modified for contrast */
}